<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView"
        android:layout_margin="10dp"
        app:cardElevation="4dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

        <TextView
                android:id="@+id/text_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="Title" android:textSize="18sp"/>

        <TextView
                android:id="@+id/text_view_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/text_view_title"
                android:text="Date"/>

        <TextView
                android:id="@+id/text_view_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:layout_below="@id/text_view_title"
                android:text="Description"/>
        <Button
                android:layout_width="25dp"
                android:layout_height="29dp"
                android:id="@+id/deleteButton" android:layout_marginTop="3dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.866"
                android:drawableEnd="@drawable/ic_delete_black_24dp"
                app:layout_constraintVertical_bias="0.695" android:background="#ff0000"
                android:layout_alignParentEnd="true" android:layout_marginEnd="5dp"/>
        <Button
                android:layout_width="25dp"
                android:layout_height="29dp"
                android:id="@+id/editButton" android:layout_marginTop="3dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.866"
                android:drawableEnd="@drawable/ic_edit_black_24dp"
                app:layout_constraintVertical_bias="0.695" android:background="#ffff00"
                android:layout_alignParentEnd="true" android:layout_marginEnd="43dp"/>
        <Button
                android:layout_width="25dp"
                android:layout_height="29dp"
                android:id="@+id/seeButton" android:layout_marginTop="3dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.866"
                android:drawableEnd="@drawable/ic_people_black_24dp"
                app:layout_constraintVertical_bias="0.695" android:background="#FF05EA28"
                android:layout_marginEnd="39dp" android:layout_alignEnd="@+id/editButton"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
