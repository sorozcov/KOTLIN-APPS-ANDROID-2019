<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AdminRegisterActivity" android:background="#0A9B31">

    <TextView
            android:text="Administrador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="@+id/adminImageUpload"
            app:layout_constraintBottom_toTopOf="@+id/adminImageUpload"
            app:layout_constraintVertical_chainStyle="packed"/>

    <Button
            android:text="Listo"
            android:layout_width="129dp"
            android:layout_height="0dp"
            android:id="@+id/okbuttona"
            android:background="@android:color/black" android:textSize="18sp" android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/departments_spinner" android:layout_marginBottom="49dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="135dp" app:srcCompat="@drawable/avatar"
            android:id="@+id/adminImageUpload"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginBottom="31dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/admin_name_textview3"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:ems="10"
            android:id="@+id/admin_token_textview"
            android:hint="Token"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/admin_password_textview" android:layout_marginBottom="13dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/departments_spinner"
            app:layout_constraintStart_toStartOf="parent" android:inputType="textPassword"/>

    <EditText
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/admin_mail_textview"
            android:hint="Correo"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/admin_name_textview3" android:layout_marginBottom="11dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/admin_password_textview"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/admin_password_textview"
            android:hint="ContraseÃ±a"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/admin_mail_textview" android:layout_marginBottom="15dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/admin_token_textview"
            app:layout_constraintStart_toStartOf="parent"/>

    <EditText
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/admin_name_textview3"
            android:hint="Nombre"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/adminImageUpload" android:layout_marginBottom="12dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/admin_mail_textview"
            app:layout_constraintStart_toStartOf="parent"/>
    <Spinner
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:id="@+id/departments_spinner"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/admin_token_textview" android:layout_marginBottom="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/okbuttona"
            app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>