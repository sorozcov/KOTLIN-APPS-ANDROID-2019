<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity" android:background="#0A9B31">

    <TextView
            android:text="@string/registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email" android:textSize="35sp"
            android:layout_marginTop="54dp"
            android:layout_marginBottom="26dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/imageView4" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_chainStyle="spread_inside"/>
    <Button
            android:text="@string/administrador"
            android:layout_width="169dp"
            android:layout_height="86dp"
            android:id="@+id/admin_registerButton" android:textAlignment="center"
            android:onClick="adminRegisterButton"
            android:background="@android:color/black" android:textSize="18sp" android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintBottom_toTopOf="@+id/student_registerButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="20dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/estudiante"
            android:layout_width="169dp"
            android:layout_height="86dp"
            android:id="@+id/student_registerButton"
            android:onClick="studentRegisterButton"
            android:background="@android:color/black" android:textSize="18sp" android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/admin_registerButton" android:layout_marginBottom="40dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="@string/registrarse_como"
            android:layout_width="212dp"
            android:layout_height="80dp"
            android:id="@+id/textView2" android:textSize="30sp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" android:layout_marginBottom="36dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/admin_registerButton"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="162dp"
            android:layout_height="135dp" app:srcCompat="@drawable/register"
            android:id="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/email" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>
